BEGIN;

SELECT plan(10);

UPDATE edges SET cost = sign(cost) + 0.001 * id * id, reverse_cost = sign(reverse_cost) + 0.001 * id * id;

--
PREPARE kruskal1 AS
SELECT * FROM pgr_kruskalBFS(
    'SELECT id, source, target, cost, reverse_cost
    FROM edges WHERE id > 18 ORDER BY id',
    21, 3
);

SELECT set_eq('kruskal1',
    $$VALUES (1, 0, 21, 21, -1, 0, 0) $$,
    '1: Empty Graph -> Only root vertex is returned');


PREPARE kruskal2 AS
SELECT *
FROM pgr_kruskalBFS(
    'SELECT id, source, target, cost
     FROM edges WHERE id > 18 ORDER BY id',
    ARRAY[21, 45],
    3
);

SELECT set_eq('kruskal2',
    $$VALUES
        (1, 0, 21, 21, -1, 0, 0),
        (2, 0, 45, 45, -1, 0, 0)
    $$,
    '2: Empty graph -> Only root vertices are returned');


--
PREPARE kruskal3 AS
SELECT *
FROM pgr_kruskalBFS(
    'SELECT id, source, target, cost, reverse_cost
     FROM edges ORDER BY id',
    21, 3
);

SELECT set_eq('kruskal3',
    $$VALUES (1, 0, 21, 21, -1, 0, 0) $$,
    '3: Root not in Graph -> Only root vertex is returned');

--
PREPARE kruskal4 AS
SELECT seq, start_vid, depth, edge, agg_cost <= 3.5
FROM pgr_kruskalBFS(
    'SELECT id, source, target, cost
     FROM edges ORDER BY id',
    ARRAY[21, 15],
    3
);

SELECT set_eq('kruskal4',
    $$VALUES
        (1, 15, 0, -1, true),
        (2, 15, 1, 16, true),
        (3, 15, 2, 9, true),
        (4, 15, 3, 5, true),
        (5, 15, 3, 8, true),
        (6, 15, 3, 11, true),
        (7, 21, 0, -1, true)
    $$,
    '4: Root not in Graph -> Only root vertex is returned, Root in graph -> spanning tree is returned');


--
PREPARE kruskal5 AS
SELECT seq, start_vid, depth, edge, depth <= 3
FROM pgr_kruskalBFS(
    'SELECT id, source, target, cost, reverse_cost
    FROM edges ORDER BY id',
    0, 3
);

SELECT set_eq('kruskal5',
    $$VALUES
        (8, 13, 0, -1, true),
        (2, 1, 1, 6, true),
        (3, 1, 2, 7, true),
        (4, 1, 3, 4, true),
        (5, 1, 3,  10, true),
        (1, 1, 0, -1, true),
        (7, 2, 1, 17, true),
        (6, 2, 0, -1, true),
        (9, 13, 1, 18, true)
    $$,
    '5: root = 0 -> forest (with random root vertices)');

--
PREPARE kruskal6 AS
SELECT *
FROM pgr_kruskalBFS(
    'SELECT id, source, target, cost, reverse_cost
    FROM edges ORDER BY id',
    15, -3
);


SELECT throws_ok('kruskal6',
    'P0001',
    'Negative value found on ''max_depth''',
    '6: Negative max_depth throws');



PREPARE kruskal7 AS
SELECT *
FROM pgr_kruskalBFS(
    'SELECT id, source, target, cost, reverse_cost
    FROM edges ORDER BY id',
    ARRAY[15, 8], -3
);

SELECT throws_ok('kruskal7',
    'P0001',
    'Negative value found on ''max_depth''',
    '7: Negative max_depth throws');

--
PREPARE kruskal8 AS
SELECT *
FROM pgr_kruskalBFS(
    'SELECT id, source, target, cost, reverse_cost
    FROM edges ORDER BY id',
    15, 0
);

SELECT set_eq('kruskal8',
    $$VALUES (1, 0, 15, 15, -1, 0, 0) $$,
    '8: 0 max_depth -> Only root vertex is returned');

--
PREPARE kruskal9 AS
SELECT seq, depth, edge, depth <= 9223372036854775807
FROM pgr_kruskalBFS(
    'SELECT id, source, target, cost, reverse_cost
    FROM edges ORDER BY id',
    15
);

SELECT set_eq('kruskal9',
    $$VALUES
        (1,  0, -1, true),
        (2,  1,  3, true),
        (3,  2,  2, true),
        (4,  2,  5, true),
        (5,  3,  1, true),
        (6,  3,  4, true),
        (7,  3,  9, true),
        (8,  3, 11, true),
        (9,  4,  7, true),
        (10, 4, 10, true),
        (11, 4, 13, true),
        (12, 5,  6, true),
        (13, 5, 14, true)
    $$,
    '9: default max_depth -> complete tree from root');

--
PREPARE kruskal10 AS
SELECT seq, start_vid, depth, edge, depth <= 9223372036854775807
FROM pgr_kruskalBFS(
    'SELECT id, source, target, cost, reverse_cost
    FROM edges ORDER BY id',
    0
);

SELECT set_eq('kruskal10',
    $$VALUES
       (1,  1, 0, -1, true),
       (2,  1, 1, 6, true),
       (3,  1, 2, 7, true),
       (4,  1, 3, 4, true),
       (5,  1, 3, 10, true),
       (6,  1, 4, 1, true),
       (7,  1, 4, 2, true),
       (8,  1, 4,14, true),
       (9,  1, 5, 3, true),
       (10,  1, 5,5, true),
       (11,  1, 6, 9, true),
       (12,  1, 6,11, true),
       (13,  1, 7,13, true),
       (14,  2, 0,-1, true),
       (15,  2, 1,17, true),
       (16, 13, 0,-1, true),
       (17, 13, 1,18, true)
    $$,
    '10: root = 0 -> forest (with random root vertices)');

SELECT * FROM finish();
ROLLBACK;
