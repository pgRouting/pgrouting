BEGIN;

UPDATE edges SET cost = sign(cost), reverse_cost = sign(reverse_cost);
SELECT CASE WHEN min_version('3.6.0') THEN plan(137) ELSE plan(1) END;

PREPARE edges AS
SELECT id, source, target, cost, reverse_cost FROM edges;

PREPARE pois AS
SELECT pid, edge_id, fraction from pointsOfInterest;

PREPARE null_ret AS
SELECT id FROM vertices WHERE id IN (-1);

PREPARE null_ret_arr AS
SELECT array_agg(id) FROM vertices WHERE id IN (-1);

PREPARE combinations AS
SELECT source, target FROM combinations;

PREPARE null_combinations AS
SELECT source, target FROM combinations WHERE source IN (-1);

CREATE OR REPLACE FUNCTION test_function()
RETURNS SETOF TEXT AS
$BODY$
DECLARE
params TEXT[];
subs TEXT[];
BEGIN

    IF NOT min_version('3.6.0') THEN
      RETURN QUERY SELECT skip(1, 'pgr_withPointsKSP testing only valid signatures on 4.0.0');
      RETURN;
    END IF;

    RETURN QUERY SELECT has_function('pgr_withpointsksp',ARRAY['text','text','bigint','bigint','integer','character','boolean','boolean','boolean']);
    -- one to one
    params = ARRAY[
    '$$edges$$',
    '$$SELECT pid, edge_id, fraction from pointsOfInterest$$',
    '5::BIGINT',
    '6::BIGINT',
    '3',
    '$$r$$'
    ]::TEXT[];
    subs = ARRAY[
    'NULL',
    'NULL',
    '(SELECT id FROM vertices WHERE id IN (-1))',
    '(SELECT id FROM vertices WHERE id IN (-1))',
    'NULL',
    'NULL::CHAR'
    ]::TEXT[];

    RETURN query SELECT * FROM no_crash_test('pgr_withPointsKSP', params, subs);

    subs = ARRAY[
    'NULL',
    'NULL',
    'NULL::BIGINT',
    'NULL::BIGINT',
    'NULL',
    'NULL::CHAR'
    ]::TEXT[];
    RETURN query SELECT * FROM no_crash_test('pgr_withPointsKSP', params, subs);

    -- one to many
    params = ARRAY['$$edges$$',
    '$$SELECT pid, edge_id, fraction from pointsOfInterest$$',
    '5::BIGINT',
    'ARRAY[6,7]::BIGINT[]',
    '2',
    '$$l$$'
    ]::TEXT[];
    subs = ARRAY[
    'NULL',
    'NULL',
    '(SELECT id FROM vertices WHERE id IN (-1))',
    '(SELECT array_agg(id) FROM vertices WHERE id IN (-1))',
    'NULL',
    'NULL::CHAR'
    ]::TEXT[];

    RETURN query SELECT * FROM no_crash_test('pgr_withPointsKSP', params, subs);

    subs = ARRAY[
    'NULL',
    'NULL',
    'NULL::BIGINT',
    'NULL::BIGINT[]',
    'NULL',
    'NULL::CHAR'
    ]::TEXT[];
    RETURN query SELECT * FROM no_crash_test('pgr_withPointsKSP', params, subs);

    -- many to one
    params = ARRAY['$$edges$$',
    '$$SELECT pid, edge_id, fraction from pointsOfInterest$$',
    'ARRAY[6,7]::BIGINT[]',
    '5',
    '2',
    '$$r$$'
    ]::TEXT[];
    subs = ARRAY[
    'NULL',
    'NULL',
    '(SELECT array_agg(id) FROM vertices WHERE id IN (-1))',
    '(SELECT id FROM vertices WHERE id IN (-1))',
    'NULL',
    'NULL::CHAR'
    ]::TEXT[];

    RETURN query SELECT * FROM no_crash_test('pgr_withPointsKSP', params, subs);

    subs = ARRAY[
    'NULL',
    'NULL',
    'NULL::BIGINT[]',
    'NULL::BIGINT',
    'NULL',
    'NULL::CHAR'
    ]::TEXT[];
    RETURN query SELECT * FROM no_crash_test('pgr_withPointsKSP', params, subs);

    -- many to many
    params = ARRAY['$$edges$$',
    '$$SELECT pid, edge_id, fraction from pointsOfInterest$$',
    'ARRAY[5]::BIGINT[]', 'ARRAY[6,7]::BIGINT[]',
    '1',
    '$$l$$'
    ]::TEXT[];
    subs = ARRAY[
    'NULL',
    'NULL',
    '(SELECT array_agg(id) FROM vertices WHERE id IN (-1))',
    '(SELECT array_agg(id) FROM vertices WHERE id IN (-1))',
    'NULL',
    'NULL::CHAR'
    ]::TEXT[];

    RETURN query SELECT * FROM no_crash_test('pgr_withPointsKSP', params, subs);

    subs = ARRAY[
    'NULL',
    'NULL',
    'NULL::BIGINT[]',
    'NULL::BIGINT[]',
    'NULL',
    'NULL::CHAR'
    ]::TEXT[];
    RETURN query SELECT * FROM no_crash_test('pgr_withPointsKSP', params, subs);

    -- Combinations SQL

    params = ARRAY['$$edges$$',
    '$$SELECT pid, edge_id, fraction from pointsOfInterest$$',
    '$$combinations$$',
    '1',
    '$$l$$'
    ]::TEXT[];
    subs = ARRAY[
    'NULL',
    'NULL',
    '$$(SELECT source, target FROM combinations WHERE source IN (-1))$$',
    'NULL::INTEGER',
    'NULL::CHAR'
    ]::TEXT[];

    RETURN query SELECT * FROM no_crash_test('pgr_withPointsKSP', params, subs);

    subs = ARRAY[
    'NULL',
    'NULL',
    'NULL::TEXT',
    'NULL::INTEGER',
    'NULL::CHAR'
    ]::TEXT[];
    RETURN query SELECT * FROM no_crash_test('pgr_withPointsKSP', params, subs);

END
$BODY$
LANGUAGE plpgsql VOLATILE;


SELECT * FROM test_function();

SELECT finish();
ROLLBACK;
